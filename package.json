{
  "name": "payments-sdk-main",
  "version": "1.0.0",
  "description": "Main goal is to ease out the payment integration process by creating a wrapper over all the integrations. Service will make use of factory pattern to create a generic payment gateway.",
  "main": "index.js",
  "scripts": {
    "start": "node ./dist/index.js",
    "pretest": "cp .env.local ./dist/tests/.env && cp ./src/tests/*.sql ./dist/tests/",
    "test": "./node_modules/.bin/mocha ./dist/tests/**/*.js",
    "prebuild": "rm -rf ./dist",
    "build": "./node_modules/.bin/tsc",
    "postbuild": "cp -r ./src/views ./dist/views && cp .env.local ./dist/.env"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Shubhamnegi/payments-sdk-main.git"
  },
