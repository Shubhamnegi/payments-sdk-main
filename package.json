  "devDependencies": {
    "@types/bunyan": "^1.8.6",
    "@types/chai": "^4.2.18",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.12",
    "@types/express-bunyan-logger": "^1.3.2",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.12.1",
    "tslint": "^6.1.3",
    "typescript": "^4.3.2"
  },
  "dependencies": {
    "@types/sequelize": "^4.28.9",
